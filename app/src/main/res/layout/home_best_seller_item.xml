<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/mixed_red"
    android:outlineSpotShadowColor="@color/black"
    app:cardCornerRadius="@dimen/_14sdp">

    <LinearLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/best_seller_img"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:scaleType="fitXY"
            android:src="@drawable/shoess"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/best_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="beautiful shoes"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/mixed_red"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="@dimen/_4sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_star"
                android:layout_gravity="center"
                app:tint="@color/mixed_red" />
            <TextView
                android:id="@+id/best_seller_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(4)"
                android:textColor="@color/mixed_red"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/best_seller_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2000 LE"
                android:textColor="@color/mixed_red"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>