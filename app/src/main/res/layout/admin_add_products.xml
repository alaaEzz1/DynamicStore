<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">
        <EditText
            android:id="@+id/admin_product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product id"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/admin_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product title"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_id"/>

        <EditText
            android:id="@+id/admin_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product category"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_name"/>

        <EditText
            android:id="@+id/admin_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product description"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_category"/>

        <EditText
            android:id="@+id/admin_product_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Link"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_desc"/>

        <EditText
            android:id="@+id/admin_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Price"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_link"/>

        <EditText
            android:id="@+id/admin_product_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Image Url"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_price"/>

        <EditText
            android:id="@+id/admin_product_url2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Image Url 2"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_url"/>

        <EditText
            android:id="@+id/admin_product_url3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Image Url 3"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_url2"/>

        <EditText
            android:id="@+id/admin_product_url4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Image Url 4"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_url3"/>

        <EditText
            android:id="@+id/admin_product_url5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/search_bg"
            android:gravity="center"
            android:hint="product Image Url 5"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/mixed_red"
            android:textColorHint="@color/mixed_red"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_url4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/admin_product_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:background="@drawable/btn_shape"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/admin_product_url5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>