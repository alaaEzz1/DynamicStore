<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EditProfileFragment">

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/edit_profile_image"
       android:layout_width="@dimen/_90sdp"
       android:layout_height="@dimen/_90sdp"
       android:src="@drawable/store_egypt_logo"
       android:layout_marginTop="@dimen/_16sdp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

   <EditText
       android:id="@+id/edit_profile_full_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_image"
       android:layout_marginLeft="@dimen/_20sdp"
       android:layout_marginRight="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:background="@drawable/search_bg"
       android:gravity="center"
       android:hint="Full Name"
       android:inputType="text"
       android:padding="@dimen/_8sdp"
       android:textColor="@color/mixed_red"
       android:textColorHint="@color/mixed_red"
       android:textSize="@dimen/_18ssp" />

   <EditText
       android:id="@+id/edit_profile_email"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_full_name"
       android:layout_marginLeft="@dimen/_20sdp"
       android:layout_marginRight="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:background="@drawable/search_bg"
       android:gravity="center"
       android:hint="Email"
       android:inputType="textEmailAddress"
       android:padding="@dimen/_8sdp"
       android:textColor="@color/mixed_red"
       android:textColorHint="@color/mixed_red"
       android:textSize="@dimen/_18ssp" />

   <EditText
       android:id="@+id/edit_profile_age"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_email"
       android:layout_marginLeft="@dimen/_20sdp"
       android:layout_marginRight="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:background="@drawable/search_bg"
       android:gravity="center"
       android:hint="Age"
       android:inputType="number"
       android:padding="@dimen/_8sdp"
       android:textColor="@color/mixed_red"
       android:textColorHint="@color/mixed_red"
       android:textSize="@dimen/_18ssp" />

   <EditText
       android:id="@+id/edit_profile_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_age"
       android:layout_marginLeft="@dimen/_20sdp"
       android:layout_marginRight="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:background="@drawable/search_bg"
       android:gravity="center"
       android:hint="Address"
       android:inputType="text"
       android:padding="@dimen/_8sdp"
       android:textColor="@color/mixed_red"
       android:textColorHint="@color/mixed_red"
       android:textSize="@dimen/_18ssp" />

   <EditText
       android:id="@+id/edit_profile_mobilePhone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_address"
       android:layout_marginLeft="@dimen/_20sdp"
       android:layout_marginRight="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:background="@drawable/search_bg"
       android:gravity="center"
       android:hint="Mobile Phone"
       android:inputType="phone"
       android:padding="@dimen/_8sdp"
       android:textColor="@color/mixed_red"
       android:textColorHint="@color/mixed_red"
       android:textSize="@dimen/_18ssp" />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/edit_profile_update_data"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Update data"
       android:textSize="@dimen/_16sdp"
       android:textStyle="bold|italic"
       android:textColor="@color/white"
       android:textAllCaps="false"
       android:gravity="center"
       android:padding="@dimen/_12sdp"
       android:background="@drawable/btn_shape"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginStart="@dimen/_20sdp"
       android:layout_marginEnd="@dimen/_20sdp"
       app:layout_constraintTop_toBottomOf="@id/edit_profile_mobilePhone"/>


</androidx.constraintlayout.widget.ConstraintLayout>