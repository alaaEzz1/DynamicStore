<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MoreFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/more_profile_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_profile_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Account Settings"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/more_profile_img"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_profile_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Send Message to uss"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/more_profile_settings"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_profile_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Rate us"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/more_profile_message"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_profile_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="More Apps"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/more_profile_rate"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_profile_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="Logout"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/more_profile_apps"/>

</androidx.constraintlayout.widget.ConstraintLayout>