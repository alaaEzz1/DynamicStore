<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/admin_collection_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:hint="Collection id"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/mixed_red"
        android:textColorHint="@color/mixed_red"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/admin_collection_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:hint="Collection Name"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/mixed_red"
        android:textColorHint="@color/mixed_red"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintTop_toBottomOf="@id/admin_collection_id"/>

    <EditText
        android:id="@+id/admin_collection_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:hint="Collection Image Url"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/mixed_red"
        android:textColorHint="@color/mixed_red"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintTop_toBottomOf="@id/admin_collection_name"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/admin_collection_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:background="@drawable/btn_shape"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/admin_collection_url"/>

</androidx.constraintlayout.widget.ConstraintLayout>